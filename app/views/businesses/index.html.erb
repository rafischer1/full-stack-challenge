<p id="notice"><%= notice %></p>

<h1>Businesses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Shortdesc</th>
      <th>Longdesc</th>
      <th>Location</th>
      <th>Founded</th>
      <th>Founders</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
      <tr>
        <td><%= business.name %></td>
        <td><%= business.shortdesc %></td>
        <td><%= business.longdesc %></td>
        <td><%= business.location %></td>
        <td><%= business.founded %></td>
        <td><%= business.founders %></td>
        <td><%= link_to 'Show', business %></td>
        <td><%= link_to 'Edit', edit_business_path(business) %></td>
        <td><%= link_to 'Destroy', business, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

